                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/grigio"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Pos. Classifica:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtPosClassifica"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Pos. Campion.:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtPosCampionato"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/grigio"
                            android:layout_marginRight="5dp"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Pos. Risultati:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtPosRisultati"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right|center_vertical"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Da pagare:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtTotVersamento"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right|center_vertical"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/grigio"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Vinti:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtVinti"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right|center_vertical"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Reali:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtReali"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right|center_vertical"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/grigio"
                            android:weightSum="7">

                            <TextView
                                android:id="@+id/txt10"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="Presi:"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/txtPresi"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="3dp"
                                android:layout_weight="3"
                                android:gravity="right|center_vertical"
                                android:text=""
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
